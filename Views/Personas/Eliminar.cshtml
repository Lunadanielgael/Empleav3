@model Persona

<h2>Confirmar Eliminación</h2>

<p>¿Estás seguro de que quieres eliminar a @Model.Nombre?</p>

@using (Html.BeginForm("EliminarConfirmado", "Personas", new { id = Model.Id }))
{
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index", "Personas")" class="btn btn-primary">Cancelar</a>
}